mixin header-slider(imgName)
    .swiper-slide
        .header-slider__item
            img(src=`../../img/${imgName}.webp`, alt="img", loading="lazy")

header.header
    .header-nav.d-flex
        .header-container.d-flex
            a(href="#!").logo Good#[span.accent-span Life]

            //-part-mobile-menu

            #header-menu
                nav.header-menu.d-flex
                    a(href="#!") Classes
                    a(href="#!") Timetable
                    a(href="#!") Clubs
                    a(href="#!") Nutrition
                    a(href="#!") Free Trial

            //nav.header-menu.d-flex#header-menu
