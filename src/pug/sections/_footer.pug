mixin social-item(svgName, svgWidth, svgHeight)
    a(href="#!")
        svg(width=svgWidth height=svgHeight)
            use(href="../../img/sprite/brands.svg#" + svgName)

mixin footer-menu(menuTitle, ...menuLinks)
    .footer-menu
        h4.block-title #{menuTitle}
        ul.footer-menu__list
            each link in menuLinks
                li
                    a(href="#!")= link

